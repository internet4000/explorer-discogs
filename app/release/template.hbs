{{resource-head
    type="release"
    title=model.title}}

<pre>year: {{model.year}}
country: {{model.country}}
released: {{model.released}}
numForSale: {{model.numForSale}}
lowestPrice: {{model.lowestPrice}}
</pre>

<h3>Main artist</h3>
<p>{{model.artistsSort}}</p>

<h3>Genres</h3>
{{each-list list=model.genres}}

<h3>Styles</h3>
{{each-list list=model.styles}}

<h3>Tracklist</h3>
{{#each-list list=model.tracklist as |track|}}
  {{track.position}} -
  {{track.title}}
  {{track.duration}}
  {{track.type}}
  {{#each-list list=track.extraartists as |artist|}}
    {{link-to artist.name "artist" artist.id}} ({{artist.role}})
  {{/each-list}}
{{/each-list}}

<h3>Videos</h3>
<p>{{button-play-all playlist=model.videos}}</p>
{{#each-list list=model.videos as |video|}}
  {{track-video model=video}}
{{/each-list}}

{{#if model.notes}}
<h3>Notes</h3>
<p>{{model.notes}}</p>
{{/if}}

<h3>Artists</h3>
{{#each-list list=model.artists as |artist|}}
  {{link-to artist.name "artist" artist.id}}
{{/each-list}}

<h3>Labels</h3>
{{#each-list list=model.labels as |label|}}
  {{link-to label.name "label" label.id}}
{{/each-list}}

{{#if model.companies}}
<h3>Companies</h3>
{{#each-list list=model.companies as |label|}}
  {{link-to label.name "label" label.id}}
{{/each-list}}
{{/if}}


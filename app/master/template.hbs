{{resource-head
    type="master"
    title=model.title}}

<ul>
  <li>Released: {{model.year}}</li>
  <li>Genres: {{each-comma model.genres}}</li>
  <li>Styles: {{each-comma model.styles}}</li>
  <li>{{model.numForSale}} currently for sale</li>
  <li>Lowest price: {{model.lowestPrice}}</li>
</ul>

<h3>Tracklist</h3>
{{#each-list model.tracklist as |track|}}
  {{track.position}} -
  {{track.title}}
  {{track.duration}}
  {{track.type}}
  {{#each-list track.extraartists as |artist|}}
    {{link-to artist.name "artist" artist.id}} ({{artist.role}})
  {{/each-list}}
{{/each-list}}

{{#if model.videos}}
  <h3>Videos</h3>

  {{play-release release=model}}

  {{#each-list model.videos as |video|}}
    {{track-video model=video}}
  {{/each-list}}
{{/if}}

<h3>Artists</h3>
{{#each-list model.artists as |artist|}}
  {{link-to artist.name "artist" artist.id}}
{{/each-list}}

<h3>Links</h3>
<ul>
  <li>{{link-to "View main release" "release" model.mainRelease.id}}</li>
  <li>{{link-to-external url=model.versionsUrl text="All versions on the API"}}</li>
  <li>{{link-to-discogs url=model.discogsHumanUrl}}</li>
</ul>

{{outlet}}

